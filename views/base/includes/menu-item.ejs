<div class="menu-item">

    <div class="menu-item-title">
        <% if(locals.isAdmin){ %> 
        <a href="/admin/products/<%= product.id %>">
            <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
            <h3><%= product.name %></h3> 
        </a>
        <% } %>

        <% if(!locals.isAdmin){ %> 
            <a href="/products/<%= product.id %>">
                <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                <h3><%= product.name %></h3> 
            </a>
            <% } %> 

    </div>   

    <div class="menu-item-price">
        <p><%= product.price.toFixed(2) %> KM</p>
    </div>

    <% if(locals.isAdmin) { %> 
    <div class="delete">
        <a href="/admin/products/<%= product.id %>">Uredi</a>
        <button id="delete-btn" class="delete-btn" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Obri≈°i</button>
    </div>
    <% } %> 
</div>