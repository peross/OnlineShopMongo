<%- include('../../base/includes/head', {pageTitle: 'Proizvodi'}) %> 

</head>
<body>
    <%- include('../../base/includes/header') %> 
    <section class="new-product sec-padding">
        <h1>Dodaj novi proizvod</h1>
        <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="post" class="form" enctype="multipart/form-data">
            
            <p>
                <label for="name">Naziv proizvoda</label>
                <input type="text" name="name" id="name" required>
            </p>
            <p>
                <label for="image">Dodaj sliku</label>
                <input type="file" name="image" id="image" accept=".png,.jpg,.jpeg,.webp">
            </p>
            <p>
                <label for="description">Opis</label>
                <textarea name="description" id="description" rows="7" required></textarea>
            </p>
            <p>
                <label for="price">Cijena</label>
                <input type="number" step="0.01" min="0.01" name="price" id="price" required>
            </p>
            <p>
                <label for="category">Kategorija</label>
                <select name="category" id="category">
                    <% for(const category of categorys){ %>
                        <option value="<%= category.name %>"><%= category.name %></option>
                    <% } %>  
                </select>
            </p>
            <p>
                <button type="submit" class="btn btn-default">Dodaj proizvod</button>
                <button type="reset" class="btn">Poni≈°ti</button>
            </p>
        </form>
    </section>