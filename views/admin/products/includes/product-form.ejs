<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="post" class="form" enctype="multipart/form-data">
            
    <p>
        <label for="name">Naziv proizvoda</label>
        <input type="text" name="name" id="name" value="<%= product.name %>" required>
    </p>

    <% if(locals.isAdmin){ %> 
    <div class="image-upload-preview">
        <p>
            <label for="image">Dodaj sliku</label>
            <input type="file" name="image" id="image" accept=".png,.jpg,.jpeg,.webp" <% if(imageRequired) { %>required<% } %>  >
        </p>
        <img src="" alt="Slika">
    </div>
    
     
    <p>
        <label for="description">Opis</label>
        <textarea name="description" id="description" rows="5" required><%= product.description %></textarea>
    </p>
    <p>
        <label for="price">Cijena</label>
        <input type="number" step="0.01" min="0.01" name="price" id="price" value="<%= product.price %>" required>
    </p>
    
    <p>
        <div>
            
            <select name="category">
                <option value="Doručak" <% if (product.category === 'Doručak') { %>selected<% } %>>Doručak</option>
                <option value="Predjela" <% if (product.category === 'Predjela') { %>selected<% } %>>Predjela</option>
                <option value="Brusketi" <% if (product.category === 'Brusketi') { %>selected<% } %>>Brusketi</option>
                <option value="Supe i čorbe" <% if (product.category === 'Supe i čorbe') { %>selected<% } %>>Supe i čorbe</option>
                <option value="Glavna jela" <% if (product.category === 'Glavna jela') { %>selected<% } %>>Glavna jela</option>
                <option value="Prilozi" <% if (product.category === 'Prilozi') { %>selected<% } %>>Prilozi</option>
                <option value="Salate" <% if (product.category === 'Salate') { %>selected<% } %>>Salate</option>
                <option value="Sosevi" <% if (product.category === 'Sosevi') { %>selected<% } %>>Sosevi</option>
                <option value="Deserti" <% if (product.category === 'Deserti') { %>selected<% } %>>Deserti</option>
            </select>
        </form>
    </p>

    <% } %>
    <p>
        <% if(locals.isAdmin){ %> 
            <button type="submit" class="btn btn-default">Sačuvaj</button>
            <button type="reset" class="btn">Poništi</button>
        <% } %> 
    </p>
</form>