<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="post" class="form" enctype="multipart/form-data">
            
    <p>
        <label for="name">Naziv proizvoda</label>
        <input type="text" name="name" id="name" value="<%= product.name %>" required>
    </p>

    <% if(locals.isAdmin){ %> 
    <div class="image-upload-preview">
        <p>
            <label for="image">Dodaj sliku</label>
            <input type="file" name="image" id="image" accept=".png,.jpg,.jpeg,.webp" <% if(imageRequired) { %>required<% } %>  >
        </p>
        <img src="" alt="Slika">
    </div>
    
     
    <p>
        <label for="description">Opis</label>
        <textarea name="description" id="description" rows="5" required><%= product.description %></textarea>
    </p>
    <p>
        <label for="price">Cijena</label>
        <input type="number" step="0.01" min="0.01" name="price" id="price" value="<%= product.price %>" required>
    </p>
    
    <p>
        <label for="categoty">Kategorija</label>
        <input type="text" name="category" id="category" value="<%= product.category %>" required>
    </p>

    <% } %>
    <p>
        <% if(locals.isAdmin){ %> 
            <button type="submit" class="btn btn-default">Sačuvaj</button>
            <button type="reset" class="btn">Poništi</button>
        <% } %> 
    </p>
</form>